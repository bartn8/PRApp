<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/primaryColorGrey"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statistichemembro_list_item_nomeMembro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_gravity="center"
                android:textColor="@color/primaryTextColor"
                tools:text="@string/statistichemembro_list_item_nomeMembro" />

            <TextView
                android:id="@+id/statistichemembro_list_item_cognomeMembro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_gravity="center"
                android:textColor="@color/primaryTextColor"
                tools:text="@string/statistichemembro_list_item_cognomeMembro" />

        </LinearLayout>

        <TextView
            android:id="@+id/statistichemembro_list_item_label_cassiere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primaryTextColor"
            tools:text="@string/statistichemembro_list_item_label_cassiere" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/statistichemembro_list_item_label_entrateCassiere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_gravity="center"
                android:textColor="@color/primaryTextColor"
                tools:text="@string/statistichemembro_list_item_label_entrateCassiere" />

            <TextView
                android:id="@+id/statistichemembro_list_item_entrateCassiere"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_gravity="center"
                android:textColor="@color/primaryTextColor"
                tools:text="@string/statistichemembro_list_item_entrateCassiere" />

        </LinearLayout>

        <TextView
            android:id="@+id/statistichemembro_list_item_label_pr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/primaryTextColor"
            tools:text="@string/statistichemembro_list_item_label_pr" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statistichePRRecyclerView"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>